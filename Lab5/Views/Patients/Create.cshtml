@using Lab5.Models
@model Lab5.ApiModels.Patient.CreatePatientApi
@{
    ViewBag.Title = "Create";
}
<h2>Create</h2>
<h3>Hospital</h3>
<form asp-controller="Patients" asp-action="Create">
    <div class="validation" asp-validation-summary="ModelOnly"></div>

    <!-- Name -->
    <div class="form-group">
        <label asp-for="Name" class="font-weight-bold"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name"></span>
    </div>
   
    <!-- BirthDate -->
    <div class="form-group">
        <label asp-for="BirthDate" class="font-weight-bold"></label>
        <input asp-for="BirthDate" class="form-control" />
        <span asp-validation-for="BirthDate"></span>
    </div>

    <!-- Gender -->
    <div class="form-group">
        <label asp-for="Gender" class="font-weight-bold"></label>
        <select asp-for="Gender" class="form-control">
            @foreach (var item in Enum.GetValues<GenderType>())
            {
                <option value="@((int)item)">@item</option>
            }
        </select>
    </div>
    
    <!-- Submit -->
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>