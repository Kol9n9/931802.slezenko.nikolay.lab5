@model Lab5.Models.DoctorModel
@{
    ViewBag.Title = "Details";
}
<h2>Details</h2>
<dl class="container">
    <div class="row form-group">
        <span class="col-sm-3 text-sm-right font-weight-bold">Name</span>
        <span class="col-sm-3 text-secondary">@Model.Name</span>
    </div>
    <!-- Gender -->
    <div class="row form-group">
        <dt class="col-sm-3 text-sm-right font-weight-bold">Gender</dt>
        <dd class="col-sm-3 text-secondary">@Model.Gender</dd>
    </div>
    <div class="row form-group">
        <span class="col-sm-3 text-sm-right font-weight-bold">Speciality</span>
        <span class="col-sm-3 text-secondary">@Model.Speciality</span>
    </div>

    <div class="row form-group">
        <span class="col-sm-3 text-sm-right font-weight-bold">Hospital</span>
        <div class="col-sm-3">
            <a asp-controller="Hospitals" asp-action="Details" asp-route-id="@Model.Hospital?.Id"
            >@Model.Hospital?.Name</a>
        </div>
    </div>
</dl>